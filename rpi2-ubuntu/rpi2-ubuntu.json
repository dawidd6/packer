{
  "builders": [
    {
      "type": "arm-image",
      "image_type": "raspberrypi",
      "iso_url": "http://cdimage.ubuntu.com/releases/20.04/release/ubuntu-20.04.2-preinstalled-server-armhf+raspi.img.xz",
      "iso_checksum": "sha256:7b348d080648b8e36e1f29671afd973a0878503091b935b69828f2c7722dfb58",
      "output_filename": "rpi2-ubuntu-20.04.img"
    }
  ],
  "provisioners": [
    { "type": "shell", "inline": ["rm /etc/resolv.conf", "echo nameserver 1.1.1.1 > /etc/resolv.conf" ] },
    {
      "type": "shell",
      "inline": [
        "touch /boot/ssh"
      ]
    },
    {
      "type": "file",
      "source": "100-cloud-init-ssh.cfg",
      "destination": "/etc/cloud/cloud.cfg.d/"
    },
    {
      "type": "shell",
      "inline": [
        "apt-get update",
        "apt-get remove -y --purge snapd"
      ]
    }
  ]
}